{% extends "masterPage.html.twig" %}

{% block title %} Paiement {% endblock %}

{% block content %}
    {% if fin is defined %}
    <div style="width:100%; height: 25px;"></div>
    <div class="row" style="width:100%; margin:0;">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <p style="font-size: 50px; text-align: center;">THE END</p>
                    <iframe width="503" height="315" src="https://www.youtube.com/embed/5iC0YXspJRM?rel=0&amp;autoplay=1" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    {% else %}

    <div style="width:100%; height: 15px;"></div>
    <div class="row"style="width:100%; margin:0;">
        <div class="col-md-4"></div>
        <div class="col-md-4" style= "border:3px solid black; background-color: whitesmoke;">
            <p>Selectionner votre mode de paiement:</p>
            <div>
                <input type="radio" id="cheque" name="mpaiement" value="cheque" checked>
                <label for="cheque">Cheque</label>
            </div>
            <div>
                <input type="radio" id="virement" name="mpaiement" value="virement">
                <label for="virement">Virement</label>
            </div>
            <div>
                <input type="radio" id="cb" name="mpaiement" value="cb">
                <label for="cb">Carte bancaire</label>
            </div>
            
            <hr class= "separation">

            <p>Selectionner votre mode de livraison:</p>
            <div>
                <input type="radio" id="chronopost" name="mlivraison" value="chronopost" checked>
                <label for="chronopost">Chronopost</label>
            </div>
            <div>
                <input type="radio" id="collissimo" name="mlivraison" value="collissimo">
                <label for="collissimo">Collissimo</label>
            </div>

            <hr class= "separation">

            <div class="row"style="width:100%; margin:0;">
                <div class="col-md-7">
                    Adresse de livraison:<br/>
                    {% for user in tabUser %}
                    {{ user.nom }} {{ user.prenom }}<br/>
                    {% endfor %}
                    {% for adresse in tabAdresse %}
                    {{ adresse.adresse_livraison }} <br/> {{ adresse.cp_livraison }} {{ adresse.ville_livraison }}
                    {% endfor %}
                </div>
                <div class="col-md-1"></div>

                <div class="col-md-4">
                    <button id="btnValidComm" class="col-md-12 btn btn-dark" style="margin-top: 55px;">Valider</button>
                </div>
            </div></br>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div style="width:100%; height: 60px;"></div>

    {% endif %}

{% endblock %}